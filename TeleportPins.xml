<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
    <!-- 
        BOLTTeleportPinTemplate - Secure map pins (like OPie)
        Pins ARE secure buttons - left-click directly casts spell/uses item
        No popup needed - instant teleport on click!
    -->
    <Button name="BOLTTeleportPinTemplate" mixin="BOLTTeleportPinMixin" inherits="SecureActionButtonTemplate" virtual="true" enableMouse="true" registerForClicks="LeftButtonUp,RightButtonUp">
        <Size x="24" y="24"/>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnEnter method="OnMouseEnter"/>
            <OnLeave method="OnMouseLeave"/>
            <OnClick method="OnClick"/>
        </Scripts>
    </Button>
</Ui>
