<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
    <!-- 
        BOLTTeleportPinTemplate - Display-only map pin (12.0 compliant)
        NO secure actions - pins only show icons, tooltips, and open popup
        Secure teleport execution is handled by Teleports_SecureUI.lua
    -->
    <Frame name="BOLTTeleportPinTemplate" mixin="BOLTTeleportPinMixin" virtual="true" enableMouse="true">
        <Size x="24" y="24"/>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnEnter method="OnMouseEnter"/>
            <OnLeave method="OnMouseLeave"/>
            <OnMouseDown method="OnMouseDown"/>
        </Scripts>
    </Frame>
</Ui>
