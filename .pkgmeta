package-as: ColdSnap

# Files and directories to ignore when creating the package
ignore:
  - .git
  - .github
  - .gitignore
  - README.md
  - CHANGELOG.md
  - .release
  - "*.zip"

# Enable creation of multiple TOC files for different game versions
enable-toc-creation: no

# Enable creation of nolib packages (without embedded libraries)
enable-nolib-creation: no

# Move folders during packaging (if needed)
# move-folders:
#   ColdSnap/Module: Module

# Manual changelog (optional - will use git commits if not specified)
# manual-changelog: |
#   - Feature 1
#   - Bug fix 2

# License output (optional)
# license-output: LICENSE.txt

# Tools used (for metadata)
# tools-used:
#   - BigWigsMods Packager
